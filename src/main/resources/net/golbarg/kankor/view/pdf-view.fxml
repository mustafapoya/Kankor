<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>


<BorderPane fx:id="root" nodeOrientation="RIGHT_TO_LEFT" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.golbarg.kankor.view.PdfViewController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox>
                    <children>
                        <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                            <items>
                                <Button fx:id="btnOpenFile" mnemonicParsing="false" prefHeight="30.0" text="باز کردن فایل">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-file-earmark-richtext" iconSize="15" />
                                    </graphic>
                                </Button>
                            </items>
                            <HBox.margin>
                                <Insets bottom="2.0" />
                            </HBox.margin>
                        </ToolBar>
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
   <left>
      <VBox prefWidth="200.0" spacing="2.0" BorderPane.alignment="CENTER">
         <children>
            <ComboBox fx:id="comboCategory" maxWidth="1.7976931348623157E308" prefHeight="30.0" />
            <ListView fx:id="listViewResources" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </left>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
   <center>
      <VBox fx:id="vbPdfContent" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
