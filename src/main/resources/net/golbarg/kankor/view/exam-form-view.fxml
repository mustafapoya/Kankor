<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" nodeOrientation="RIGHT_TO_LEFT" prefHeight="480.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.golbarg.kankor.view.ExamFormViewController">
    <center>
        <TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" tabMinHeight="25.0" tabMinWidth="80.0" BorderPane.alignment="CENTER">
            <tabs>
                <Tab fx:id="tabExam" text="امتحان">
                    <graphic>
                        <FontIcon iconLiteral="bi-alarm" iconSize="16" />
                    </graphic>
                    <content>
                        <BorderPane prefHeight="200.0" prefWidth="200.0">
                            <bottom>
                                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                                    <children>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Button fx:id="btnUniversity" mnemonicParsing="false" text="تعیین رشته" />
                                            </children>
                                            <padding>
                                                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                                            </padding>
                                        </HBox>
                                    </children>
                                </VBox>
                            </bottom></BorderPane>
                    </content>
                </Tab>
                <Tab fx:id="tabUniversity" text="تعیین رشته">
                    <graphic>
                        <FontIcon iconLiteral="bi-alarm" iconSize="16" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneUniversity" prefHeight="200.0" prefWidth="200.0">
                            <bottom>
                                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                                    <children>
                                        <HBox alignment="CENTER">
                                            <children>
                                                <Button mnemonicParsing="false" text="نتیجه" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </bottom></BorderPane>
                    </content>
                </Tab>
                <Tab fx:id="tabResult" text="نتیجه امتحان">
                    <graphic>
                        <FontIcon iconLiteral="bi-alarm" iconSize="16" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneExamResult" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab fx:id="tabReview" text="بررسی سوالات">
                    <graphic>
                        <FontIcon iconLiteral="bi-alarm" iconSize="16" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneExamReview" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
