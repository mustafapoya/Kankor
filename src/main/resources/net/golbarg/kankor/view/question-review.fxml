<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" nodeOrientation="RIGHT_TO_LEFT" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.golbarg.kankor.view.QuestionReviewController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <ToolBar prefHeight="40.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                    <items>
                        <Button fx:id="btnNote" mnemonicParsing="false" prefHeight="30.0" text="یادداشت ها">
                           <graphic>
                              <FontIcon iconLiteral="bi-clipboard" iconSize="15" />
                           </graphic>
                        </Button>
                      <Button fx:id="btnShowAnswer" mnemonicParsing="false" prefHeight="30.0" text="نمایش جوابات">
                           <graphic>
                              <FontIcon iconLiteral="bi-check2-square" iconSize="15" />
                           </graphic></Button>
                    </items>
                  </ToolBar>
               </children>
            </HBox>
            <ProgressBar maxWidth="1.7976931348623157E308" prefHeight="8.0" />
            <HBox>
               <children>
                  <GridPane hgap="3.0" vgap="2.0" HBox.hgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="80.0" prefWidth="80.0" />
                      <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="80.0" prefWidth="80.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                         <Label text="مضمون" />
                        <ComboBox fx:id="comboSubject" maxWidth="1.7976931348623157E308" prefHeight="30.0" GridPane.columnIndex="1" />
                        <Label text="نوعیت" GridPane.columnIndex="2" />
                        <ComboBox fx:id="comboType" maxWidth="1.7976931348623157E308" prefHeight="30.0" GridPane.columnIndex="3" />
                         <HBox spacing="2.0" GridPane.columnSpan="4" GridPane.rowIndex="1">
                             <children>
                                 <TextField fx:id="txtSearch" maxWidth="1.7976931348623157E308" prefHeight="30.0" promptText="جستجو" HBox.hgrow="ALWAYS" />
                                 <Button fx:id="btnSearch" mnemonicParsing="false" prefHeight="30.0" text="جستجو">
                                     <graphic>
                                         <FontIcon iconLiteral="bi-search" iconSize="15" />
                                     </graphic>
                                 </Button>
                             </children>
                         </HBox>
                     </children>
                     <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                     </padding>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <ScrollPane fx:id="scrollPaneContent" fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" vbarPolicy="ALWAYS" BorderPane.alignment="CENTER">
         <content>
            <VBox fx:id="vbContentContainer" prefHeight="200.0" prefWidth="100.0" />
         </content></ScrollPane>
   </center>
   <bottom>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Pagination fx:id="pagination" pageCount="100" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>
