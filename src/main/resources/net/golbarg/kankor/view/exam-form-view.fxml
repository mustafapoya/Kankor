<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane fx:id="root" nodeOrientation="RIGHT_TO_LEFT" prefHeight="480.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="net.golbarg.kankor.view.ExamFormViewController">
    <center>
        <TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" tabMaxHeight="32.0" tabMinHeight="32.0" tabMinWidth="85.0" BorderPane.alignment="CENTER">
            <tabs>
                <Tab fx:id="tabExam" text="امتحان">
                    <graphic>
                        <FontIcon iconLiteral="bi-ui-radios" iconSize="20" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneExam" prefHeight="200.0" prefWidth="200.0">
                     <bottom>
                        <VBox BorderPane.alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER_RIGHT">
                                 <children>
                                    <Button fx:id="btnUniversity" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="انتخاب رشته">
                                       <graphic>
                                          <FontIcon iconLiteral="bi-ui-checks" iconSize="20" />
                                       </graphic>
                                    </Button>
                                 </children>
                                 <padding>
                                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                     </bottom></BorderPane>
                    </content>
                </Tab>
                <Tab fx:id="tabUniversity" text="تعیین رشته">
                    <graphic>
                        <FontIcon iconLiteral="bi-ui-checks" iconSize="20" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneUniversity" prefHeight="200.0" prefWidth="200.0">
                            <bottom>
                                <VBox alignment="CENTER" BorderPane.alignment="CENTER">
                                    <children>
                                        <HBox alignment="CENTER_RIGHT">
                                            <children>
                                                <Button fx:id="btnViewResult" minWidth="80.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="نتیجه">
                                       <graphic>
                                          <FontIcon iconLiteral="bi-hourglass-split" iconSize="20" />
                                       </graphic></Button>
                                            </children>
                                 <padding>
                                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                 </padding>
                                        </HBox>
                                    </children>
                                </VBox>
                            </bottom></BorderPane>
                    </content>
                </Tab>
                <Tab fx:id="tabResult" text="نتیجه امتحان">
                    <graphic>
                        <FontIcon iconLiteral="bi-hourglass-split" iconSize="20" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneExamResult" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </Tab>
                <Tab fx:id="tabReview" text="بررسی سوالات">
                    <graphic>
                        <FontIcon iconLiteral="bi-search" iconSize="20" />
                    </graphic>
                    <content>
                        <BorderPane fx:id="borderPaneExamReview" prefHeight="200.0" prefWidth="200.0">
                     <bottom>
                        <VBox BorderPane.alignment="CENTER">
                           <children>
                              <HBox alignment="CENTER_RIGHT">
                                 <children>
                                    <Button fx:id="btnBackResult" minWidth="80.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="200.0" text="برگشت">
                                       <graphic>
                                          <FontIcon iconLiteral="bi-arrow-right" iconSize="20" />
                                       </graphic>
                                    </Button>
                                 </children>
                                 <padding>
                                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                 </padding>
                              </HBox>
                           </children>
                        </VBox>
                     </bottom></BorderPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
